<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/action_bar_title_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/introduce"
        android:text="@string/OrderConfirmed"
        android:textSize="18sp"
        android:textColor="@color/tab_layout_select_color"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/brand_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/introduce"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/brand_name"
            android:text="@string/PowerByIs"
            android:textSize="16sp"
            android:textColor="@color/text_color_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/brand"
            android:text="@string/Jodan"
            android:textSize="16sp"
            android:textColor="@color/tab_layout_select_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/Summary"
        android:text="@string/Summary"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/brand_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/confirm_info_layout"
        android:background="@drawable/background_rectangle"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/ItemTotal"
            android:textSize="16sp"
            android:textColor="@color/text_color_grey"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_total"
            android:text="$1.00"
            android:textSize="16sp"
            android:textColor="@color/text_color_grey"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/Shipping"
            android:textSize="16sp"
            android:textColor="@color/text_color_grey"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shipping"
            android:text="$1.00"
            android:textSize="16sp"
            android:textColor="@color/text_color_grey"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/OrderTotal"
            android:textSize="16sp"
            android:textColor="@color/tab_layout_select_color"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_total"
            android:text="$2.00"
            android:textSize="16sp"
            android:textColor="@color/text_color_red"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/button_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/confirm_info_layout"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/bt_viewOrders"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/buttonColorBlue"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" >
            <TextView
                android:textColor="@color/product_list_background_color"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/ViewOrders"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bt_continue_shipping"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/buttonColorGray"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" >
            <TextView
                android:textColor="@color/product_list_background_color"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/ContinueShipping"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/related"
        android:background="@color/another_gray"
        android:text="@string/RELATED"
        android:textColor="@color/text_color_grey"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_below="@+id/button_layout"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_related_list"
        android:layout_below="@+id/related"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>