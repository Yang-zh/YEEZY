<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="72dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/action_bar_title_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/content_view"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/cut_line_color2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/bt_avatar"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="68.5dp">
            <TextView
                android:id="@+id/avatarIs"
                android:layout_centerVertical="true"
                android:text="@string/ProfilePhoto"
                android:textColor="@color/tab_layout_select_color"
                android:textSize="13sp"
                android:layout_marginLeft="27.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/forward_avatar"
                android:id="@+id/avatar"
                android:src="@mipmap/head_image_place_holder"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="#00000000"
                app:civ_border_width="0dp"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/forward_avatar"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:src="@mipmap/forward_black"
                android:layout_width="11.5dp"
                android:layout_height="11.5dp"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <View
            android:background="@color/cut_line_color2"
            android:layout_marginLeft="17.5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
