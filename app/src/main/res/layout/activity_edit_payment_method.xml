<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main_content"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.design.widget.AppBarLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorPrimary">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp">

        <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="@string/EditShippingInfo"
          android:textColor="@android:color/white"
          android:textSize="@dimen/action_bar_title_size"
          android:textStyle="bold" />
      </RelativeLayout>
    </android.support.v7.widget.Toolbar>
  </android.support.design.widget.AppBarLayout>

  <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_grayEEEEEE"
        android:paddingBottom="14dp"
        android:paddingLeft="51.5dp"
        android:paddingRight="23.5dp"
        android:paddingTop="9.5dp"
        android:text="@string/EditPaymentMethodIntro"
        android:textColor="@color/text_color_yellowFFA057"
        android:textSize="12sp" />

      <ImageView
        android:id="@+id/intro_icon"
        android:layout_width="21dp"
        android:layout_height="23dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/icon_safe_shield" />

      <LinearLayout
        android:id="@+id/icon_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_text"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="11.5dp">

        <ImageView
          android:layout_width="35.5dp"
          android:layout_height="19dp"
          android:layout_marginLeft="2.5dp"
          android:layout_marginRight="2.5dp"
          android:src="@mipmap/icon_card_visa" />

        <ImageView
          android:layout_width="35.5dp"
          android:layout_height="19dp"
          android:layout_marginLeft="2.5dp"
          android:layout_marginRight="2.5dp"
          android:src="@mipmap/icon_card_mastercard" />

        <ImageView
          android:layout_width="35.5dp"
          android:layout_height="19dp"
          android:layout_marginLeft="2.5dp"
          android:layout_marginRight="2.5dp"
          android:src="@mipmap/icon_card_jcb" />

        <ImageView
          android:layout_width="35.5dp"
          android:layout_height="19dp"
          android:layout_marginLeft="2.5dp"
          android:layout_marginRight="2.5dp"
          android:src="@mipmap/icon_card_express" />

        <ImageView
          android:layout_width="35.5dp"
          android:layout_height="19dp"
          android:layout_marginLeft="2.5dp"
          android:layout_marginRight="2.5dp"
          android:src="@mipmap/icon_card_discover" />
      </LinearLayout>

      <EditText
        android:id="@+id/et_credit_card_number"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/icon_card_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:drawableLeft="@mipmap/icon_lock"
        android:drawablePadding="9dp"
        android:hint="@string/CardNumber"
        android:inputType="number"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:textColor="@color/tab_layout_select_color"
        android:textColorHint="@color/text_color_gray"
        android:textSize="14sp" />

      <TextView
        android:id="@+id/security_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_credit_card_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12.5dp"
        android:text="@string/SecurityCode"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="12sp" />

      <EditText
        android:id="@+id/et_security_code"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/security_code"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="9dp"
        android:drawableRight="@mipmap/icon_safe_code"
        android:hint="@string/CVV"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:paddingRight="9dp"
        android:textColor="@color/tab_layout_select_color"
        android:textColorHint="@color/text_color_gray"
        android:textSize="13sp" />

      <TextView
        android:id="@+id/expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_security_code"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12.5dp"
        android:text="@string/ExpiryDate"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="12sp" />

      <LinearLayout
        android:id="@+id/country_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expiry_date"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.fangzhich.sneakerlab.base.widget.spinner.NiceSpinner
          android:id="@+id/spinner_month"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginRight="16dp"
          android:layout_weight="1"
          android:textSize="14sp"
          app:paddingEnd="5dp"
          app:paddingStart="5dp"
          app:textTint="@color/tab_layout_select_color" />

        <com.fangzhich.sneakerlab.base.widget.spinner.NiceSpinner
          android:id="@+id/spinner_year"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:textSize="12sp"
          app:paddingEnd="5dp"
          app:paddingStart="5dp"
          app:textTint="@color/tab_layout_select_color" />
      </LinearLayout>

      <TextView
        android:id="@+id/billing_postal_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12.5dp"
        android:text="@string/BillingPostalCode"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="12sp" />

      <EditText
        android:id="@+id/et_billing_postal_code"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/billing_postal_code"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:hint="@string/ZipPostalCode"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/tab_layout_select_color"
        android:textColorHint="@color/text_color_gray"
        android:textSize="14sp" />

      <RelativeLayout
        android:id="@+id/divide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_billing_postal_code"
        android:background="@color/shipping_info_background_color">

        <TextView
          android:id="@+id/later_for_shopping"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="12.5dp"
          android:layout_marginTop="12.5dp"
          android:text="@string/LaterForShopping"
          android:textColor="@color/text_color_gray"
          android:textSize="15sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginLeft="15.5dp"
          android:layout_marginRight="11.5dp"
          android:layout_marginTop="21.5dp"
          android:layout_toLeftOf="@+id/later_for_shopping"
          android:background="@color/text_color_gray" />

        <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginLeft="11.5dp"
          android:layout_marginRight="15.5dp"
          android:layout_marginTop="21.5dp"
          android:layout_toRightOf="@+id/later_for_shopping"
          android:background="@color/text_color_gray" />
      </RelativeLayout>

      <RelativeLayout
        android:id="@+id/paypal_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/divide_layout"
        android:background="?attr/selectableItemBackground">

        <ImageView
          android:id="@+id/icon_paypal"
          android:layout_width="23dp"
          android:layout_height="23dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="23.5dp"
          android:src="@mipmap/icon_paypal" />

        <TextView
          android:id="@+id/text_paypal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/icon_paypal"
          android:text="@string/PayPal"
          android:textColor="@color/tab_layout_select_color"
          android:textSize="13sp" />

        <ImageView
          android:visibility="gone"
          android:id="@+id/check_paypal"
          android:layout_width="20.5dp"
          android:layout_height="20.5dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="15dp"
          android:src="@mipmap/icon_check_green" />
      </RelativeLayout>

      <View
        android:id="@+id/space_holder"
        android:layout_width="match_parent"
        android:layout_height="31.5dp"
        android:layout_below="@+id/paypal_layout"
        android:background="@color/shipping_info_background_color" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space_holder"
        android:background="@color/background_grayEEEEEE"
        android:padding="20dp"
        android:layout_marginTop="180dp"
        android:text="@string/SafeIntro"
        android:textColor="@color/tab_layout_unSelect_color"
        android:textSize="13sp" />
      <ImageView
        android:id="@+id/icon_medal_safe"
        android:layout_width="59.5dp"
        android:layout_height="59.5dp"
        android:layout_below="@+id/paypal_layout"
        android:layout_marginLeft="11.5dp"
        android:layout_marginTop="200dp"
        android:src="@mipmap/icon_medal_safe" />

    </RelativeLayout>
  </android.support.v4.widget.NestedScrollView>


  <android.support.v7.widget.CardView
    android:id="@+id/bt_save_info"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:layout_centerVertical="true"
    android:layout_gravity="bottom"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/text_color_red"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/SaveAndContinue"
      android:textColor="@color/product_list_background_color"
      android:textSize="15sp"
      android:textStyle="bold" />
  </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>