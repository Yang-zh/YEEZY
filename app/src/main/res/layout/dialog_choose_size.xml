<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/popup_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <View
        android:id="@+id/top_holder"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="11dp"/>

    <RelativeLayout
        android:layout_below="@+id/top_holder"
        android:id="@+id/dialog_content"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/bt_close"
            android:src="@mipmap/close_black"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_productPrice"
            android:text="ï¿¥1058.94"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="114dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_productInventory"
            android:text="@string/InventoryIs"
            android:textColor="@color/text_color_gray"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_productPrice"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="114dp"/>

        <TextView
            android:id="@+id/tv_productInventoryDetail"
            android:layout_toRightOf="@+id/tv_productInventory"
            android:text="917"
            android:textColor="@color/tab_layout_select_color"
            android:textSize="13sp"
            android:layout_below="@+id/tv_productPrice"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_productSize"
            android:text="@string/ChosenIs"
            android:textColor="@color/text_color_gray"
            android:textSize="13sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_productInventory"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="114dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_productSizeDetail"
            android:layout_toRightOf="@+id/tv_productSize"
            android:textColor="@color/tab_layout_select_color"
            android:textSize="13sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_productInventory"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/cut_line"
            android:layout_below="@+id/tv_productSize"
            android:layout_marginTop="20.5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cut_line_color"/>
        <TextView
            android:id="@+id/tv_color"
            android:text="@string/Color"
            android:textSize="12sp"
            android:textColor="@color/tab_layout_select_color"
            android:layout_below="@+id/cut_line"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_color"
            android:layout_marginTop="7.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <View
            android:id="@+id/line_second"
            android:layout_below="@+id/rv_color"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cut_line_color"/>
        <TextView
            android:id="@+id/tv_size"
            android:text="@string/Size"
            android:textSize="12sp"
            android:textColor="@color/tab_layout_select_color"
            android:layout_below="@+id/line_second"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_size"
            android:layout_below="@+id/tv_size"
            android:layout_marginTop="7.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <View
            android:id="@+id/line_third"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/rv_size"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cut_line_color"/>
        <TextView
            android:id="@+id/tv_quantity"
            android:text="@string/Quantity"
            android:textSize="12sp"
            android:textColor="@color/tab_layout_select_color"
            android:layout_below="@+id/line_third"
            android:layout_marginTop="18.5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.fangzhich.sneakerlab.base.widget.NumberView
            android:id="@+id/quantity_view"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line_third"
            android:layout_marginTop="12dp"
            android:layout_marginRight="22.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:btnWidth="28dp"
            app:tvWidth="36dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/bt_buy"
            android:foreground="?selectableItemBackgroundBorderless"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/text_color_yellowFFA057"
            android:layout_below="@+id/quantity_view"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="42.5dp" >
            <TextView
                android:textColor="@color/product_list_background_color"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/AddCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/bt_buy_now"
            android:foreground="?selectableItemBackgroundBorderless"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_below="@+id/quantity_view"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="42.5dp" >
            <TextView
                android:textColor="@color/product_list_background_color"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/BuyNow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/product_image"
        android:src="@mipmap/product_image_placeholder"
        android:layout_marginLeft="7dp"
        android:layout_width="92dp"
        android:scaleType="centerCrop"
        android:layout_height="92dp" />
    </RelativeLayout>
</RelativeLayout>