<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/status"
        android:text="@string/Shipping_underLine"
        android:textColor="@color/buttonColorRed"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/cutLine"
        android:background="@color/cut_line_color"
        android:layout_below="@+id/status"
        android:layout_marginTop="7dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginLeft="14.5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/orderPlacedIs"
        android:text="@string/OrderPlacedIs"
        android:textColor="@color/text_color_gray"
        android:textSize="12sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8.5dp"
        android:layout_below="@+id/cutLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/orderDate"
        android:text="@string/OrderDate"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2.5dp"
        android:layout_below="@+id/orderPlacedIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_list_product"
        android:layout_below="@+id/orderDate"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/bt_cancel"
        android:layout_below="@+id/rv_order_list_product"
        android:text="@string/CancelUnderLine"
        android:textColor="@color/text_color_gray"
        android:textSize="13sp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/bt_refund"
        android:layout_below="@+id/rv_order_list_product"
        android:text="@string/RequestRefundUnderLine"
        android:textColor="@color/text_color_gray"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:layout_below="@+id/rv_order_list_product"
        android:id="@+id/order_operation"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/bt_detail"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/product_option_background"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp" >
            <TextView
                android:textColor="@color/tab_layout_unSelect_color"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/Detail"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/bt_confirm_receive"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp">
            <TextView
                android:textColor="@color/product_list_background_color"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/ConfirmReceipt"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/bt_review"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/product_option_background"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="12dp">
            <TextView
                android:textColor="@color/product_list_background_color"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/Review"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>