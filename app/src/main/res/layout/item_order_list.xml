<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/status"
        android:text="@string/Shipping_underLine"
        android:textColor="@color/buttonColorRed"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8.5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/cutLine"
        android:background="@color/cut_line_color"
        android:layout_below="@+id/status"
        android:layout_marginTop="9dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginLeft="14.5dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>
    <TextView
        android:id="@+id/orderPlacedIs"
        android:text="@string/OrderPlacedIs"
        android:textColor="@color/text_color_gray"
        android:textSize="15sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8.5dp"
        android:layout_below="@+id/cutLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/orderDate"
        android:text="@string/OrderDate"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="15sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2.5dp"
        android:layout_below="@+id/orderPlacedIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_productImage"
        android:src="@mipmap/product_image_placeholder"
        android:layout_marginLeft="13.5dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/orderDate"
        android:layout_width="92dp"
        android:layout_height="97.5dp" />
    <TextView
        android:id="@+id/productName"
        android:text="@string/ProductName"
        android:textColor="@color/text_color_gray"
        android:textSize="15sp"
        android:textStyle="bold"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/orderDate"
        android:layout_toRightOf="@+id/iv_productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/quantityIs"
        android:text="@string/QuantityIs"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/productName"
        android:layout_toRightOf="@+id/iv_productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/quantity"
        android:text="@string/_1"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="14sp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/productName"
        android:layout_toRightOf="@+id/quantityIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/colorIs"
        android:text="@string/ColorIs"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/quantityIs"
        android:layout_toRightOf="@+id/iv_productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/color"
        android:text="@string/Gray"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="14sp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/quantityIs"
        android:layout_toRightOf="@+id/colorIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sizeIs"
        android:text="@string/SizeIs"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/colorIs"
        android:layout_toRightOf="@+id/iv_productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/size"
        android:text="@string/SizeDetail"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="15sp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/colorIs"
        android:layout_toRightOf="@+id/colorIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/bt_detail"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/buttonColorBlue"
        android:layout_below="@+id/price"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21.5dp" >
        <TextView
            android:textColor="@color/product_list_background_color"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/detail"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/price"
        android:text="@string/priceDetail"
        android:textColor="@color/tab_layout_select_color"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_productImage"
        android:layout_alignRight="@+id/color"
        android:layout_alignEnd="@+id/color" />
</RelativeLayout>