<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_color"
        android:text="@string/Color"
        android:textSize="12sp"
        android:textColor="@color/tab_layout_select_color"
        android:layout_marginTop="92.5dp"
        android:layout_marginLeft="8.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_color"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/line_second"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/rv_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cut_line_color"/>
</merge>