<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <ImageView
    android:visibility="gone"
    android:id="@+id/icon_check"
    android:src="@mipmap/icon_check_red"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:layout_width="20.5dp"
    android:layout_height="20.5dp" />
  <TextView
    android:id="@+id/fullname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="17.5dp"
    android:layout_toRightOf="@+id/icon_check"
    android:text="Erwin Godoy"
    android:textColor="@color/tab_layout_select_color"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="17.5dp"
    android:layout_toRightOf="@+id/fullname"
    android:text="(949)351-2261"
    android:textColor="@color/tab_layout_select_color"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/street"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fullname"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="11.5dp"
    android:layout_toRightOf="@+id/icon_check"
    android:text="57E 57TH Street"
    android:textColor="@color/tab_layout_select_color"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/cityAndState"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/street"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="1.5dp"
    android:layout_toRightOf="@+id/icon_check"
    android:text="New York,10022-2081"
    android:textColor="@color/tab_layout_select_color"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/country"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cityAndState"
    android:layout_marginBottom="23.5dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="1.5dp"
    android:layout_toRightOf="@+id/icon_check"
    android:text="United States"
    android:textColor="@color/tab_layout_select_color"
    android:textSize="14sp" />

  <ImageView
    android:id="@+id/bt_delete"
    android:layout_toLeftOf="@+id/bt_edit"
    android:layout_marginRight="20dp"
    android:src="@mipmap/icon_delete"
    android:layout_marginTop="86dp"
    android:layout_width="17.5dp"
    android:layout_height="17.5dp" />

  <ImageView
    android:id="@+id/bt_edit"
    android:layout_marginRight="15dp"
    android:src="@mipmap/icon_edit"
    android:layout_marginTop="86dp"
    android:layout_alignParentRight="true"
    android:layout_width="17.5dp"
    android:layout_height="17.5dp" />
</RelativeLayout>