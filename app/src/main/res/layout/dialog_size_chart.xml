<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_marginBottom="49dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_gravity="center_horizontal"
                android:text="@string/SizeChart"
                android:textColor="@color/tab_layout_select_color"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/intro"
                android:layout_below="@+id/title"
                android:text="@string/SizeChartIntro"
                android:textColor="@color/text_color_gray"
                android:textSize="12sp"
                android:layout_marginLeft="31.5dp"
                android:layout_marginRight="31.5dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/top_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/intro"
                android:background="@color/text_color_gray"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/intro"
                android:layout_marginTop="15.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:text="@string/US"
                    android:textColor="@color/tab_layout_select_color"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="48dp" />
                <TextView
                    android:gravity="center"
                    android:text="@string/Europe"
                    android:textColor="@color/tab_layout_select_color"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="48dp" />
            </LinearLayout>
            <View
                android:id="@+id/second_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/intro"
                android:background="@color/text_color_gray"
                android:layout_marginTop="63dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:paddingTop="15.5dp"
                android:id="@+id/chart_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_left_right_line"
                android:orientation="vertical"
                android:layout_below="@+id/second_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <View
                android:id="@+id/left_line"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/intro"
                android:background="@color/text_color_gray"
                android:layout_marginTop="15dp"
                android:layout_width="0.5dp"
                android:layout_height="48dp"/>
            <View
                android:id="@+id/right_line"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/intro"
                android:background="@color/text_color_gray"
                android:layout_marginTop="15dp"
                android:layout_width="0.5dp"
                android:layout_height="48dp"/>
            <LinearLayout
                android:id="@+id/bottom_line"
                android:layout_below="@+id/chart_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <View
                android:layout_marginBottom="7.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/text_color_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:id="@+id/place_holder"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="7.5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <android.support.v7.widget.CardView
        android:id="@+id/bt_continue"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/text_color_red"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/Continue"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
</RelativeLayout>