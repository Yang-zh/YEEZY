<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tab_layout_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:gravity="center"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_marginRight="75dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/action_bar_title_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/head_layout"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="103dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headImage"
            android:src="@mipmap/head_image_edit"
            android:background="@mipmap/head_image_place_holder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_width="61dp"
            android:layout_height="61dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/content_title"
                android:text="@string/Items"
                android:textColor="@color/tab_layout_select_color"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@color/product_list_background_color"
                android:layout_width="match_parent"
                android:layout_height="42dp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_wish_list"
                android:background="@color/product_list_background_color"
                android:layout_below="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>